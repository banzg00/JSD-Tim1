  border-radius: 0.75rem;
}

.table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
}

thead {
  background-color: #e0e0e0;
}

th {
  padding: 0.5rem 1rem;
  text-align: left;
  border-bottom: 1px solid $border-color;
}

td {
  padding: 0.5rem 1rem;
  border-bottom: 1px solid $border-color;
}

.border-b {
  border-bottom: 1px solid $border-color;
}

.border-b-gray-300 {
  border-color: #d0d0d0;
}

.text-left {
  text-align: left;
}

.pl-2 {
  padding-left: 0.5rem;
}

.pt-2 {
  padding-top: 0.5rem;
}

button {
  background-color: $button-bg-color;
  color: $button-text-color;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 0.375rem;
  cursor: pointer;
  transition: background-color 0.3s ease;

  &:hover {
    background-color: $button-hover-bg-color;
  }
}

.dialog {
  .MuiDialog-paper {
    padding: 1.5rem;
    border-radius: 0.5rem;
    background-color: $secondary-bg-color;
  }

  .MuiDialogTitle-root {
    font-weight: 600;
    font-size: 1.25rem;
  }

  .MuiDialogContent-root {
    padding: 1rem;
  }

  .MuiDialogActions-root {
    padding: 1rem;
    display: flex;
    justify-content: flex-end;
  }
}

@media (max-width: 768px) {
  .w-[45vw] {
    width: 90vw;
  }

  .p-10 {
    padding: 1rem;
  }

  .mt-[10%] {
    margin-top: 5%;
  }
}

@media (max-width: 480px) {
  .font-semibold {
    font-weight: 500;
  }

  .text-3xl {
    font-size: 1.5rem;
  }
}
